<resources>
    <style name="FullscreenTheme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="switchStyle">@style/switch_light</item>
        <item name="android:actionBarStyle">@style/BlockLauncherActionBarStyle</item>
        <item name="cardStyle">@style/card_light</item>
        <item name="cardBackgroundStyle">@style/card_background_light</item>
    </style>
    <style name="FullscreenDarkTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="switchStyle">@style/switch_dark</item>
        <item name="android:actionBarStyle">@style/BlockLauncherActionBarStyle</item>
        <item name="cardStyle">@style/card_dark</item>
        <item name="cardBackgroundStyle">@style/card_background_dark</item>
    </style>
    <style name="BlockLauncherTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="switchStyle">@style/switch_light</item>
        <item name="android:actionBarStyle">@style/BlockLauncherActionBarStyle</item>
        <item name="cardStyle">@style/card_light</item>
        <item name="cardBackgroundStyle">@style/card_background_light</item>
    </style>
    <style name="BlockLauncherDarkTheme" parent="@android:style/Theme.Holo">
        <item name="switchStyle">@style/switch_dark</item>
        <item name="android:actionBarStyle">@style/BlockLauncherActionBarStyle</item>
        <item name="cardStyle">@style/card_dark</item>
        <item name="cardBackgroundStyle">@style/card_background_dark</item>
    </style>
    <style name="BlockLauncherActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/theme_primary</item>
    </style>
</resources>
