<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    
    <style name="switch_dark">
        <item name="track">@drawable/switch_track_holo_dark</item>
        <item name="thumb">@drawable/switch_inner_holo_dark</item>
        <item name="textOn">@string/textOn</item>
        <item name="textOff">@string/textOff</item>
        <item name="thumbTextPadding">12dip</item>
        <item name="switchMinWidth">96dip</item>
        <item name="switchPadding">16dip</item>
        <item name="switchTextAppearance">@style/TextAppearance</item>
    </style>
    
    <style name="switch_light">
        <item name="track">@drawable/switch_track_holo_light</item>
        <item name="thumb">@drawable/switch_inner_holo_light</item>
        <item name="textOn">@string/textOn</item>
        <item name="textOff">@string/textOff</item>
        <item name="thumbTextPadding">12dip</item>
        <item name="switchMinWidth">96dip</item>
        <item name="switchPadding">16dip</item>
        <item name="switchTextAppearance">@style/TextAppearance</item>
    </style>    	
   
    <style name="TextAppearance">
        <item name="textColor">?android:attr/textColorPrimary</item>
        <item name="textColorHighlight">?android:attr/textColorHighlight</item>
        <item name="textColorHint">?android:attr/textColorHint</item>
        <item name="textColorLink">?android:attr/textColorLink</item>
        <item name="textSize">16sp</item>
    </style>
    
    <style name="ButtonBar" parent="@android:style/ButtonBar">
        
    </style>
    <style name="ButtonBar.Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="card_light" parent="CardView">
        <item name="cardBackgroundColor">@color/card_background_light</item>
    </style>

    <style name="card_background_light">
        <item name="android:background">@color/card_list_background_color_light</item>
    </style>

    <style name="card_dark" parent="CardView">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>

    <style name="card_background_dark">
        <item name="android:background">@color/card_list_background_color_dark</item>
    </style>

    <style name="simple_fab">
        <item name="android:background">@drawable/simple_fab_background</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:elevation">6dp</item>
    </style>
    
</resources>
